extends: default

rules:
  # Very lenient rules for GitHub Actions and Quarto
  line-length: disable
  trailing-spaces: disable
  document-start: disable
  comments-indentation: disable
  indentation: disable
  new-line-at-end-of-file: disable
  truthy: disable
  empty-lines: disable
  colons: disable
  commas: disable
  brackets: disable
  comments: disable

# Only check for critical syntax errors 