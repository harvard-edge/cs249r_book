    def setup_environment(self):
        """Setup the development environment"""
        console.print("[bold blue]ğŸ”§ MLSysBook Environment Setup[/bold blue]")
        console.print("[dim]I'll help you configure everything you need[/dim]\n")
        
        # Step 1: Check current environment
        console.print("[blue]ğŸ“‹ Step 1: Environment Check[/blue]")
        self._check_environment()
        
        # Step 2: Install/configure tools
        console.print("\n[blue]ğŸ“‹ Step 2: Tool Installation[/blue]")
        self._install_tools()
        
        # Step 3: Configure Git
        console.print("\n[blue]ğŸ“‹ Step 3: Git Configuration[/blue]")
        self._configure_git()
        
        # Step 4: Test setup
        console.print("\n[blue]ğŸ“‹ Step 4: Test Setup[/blue]")
        self._test_setup()
        
        console.print("\n[green]âœ… Environment setup completed![/green]")
        console.print("[blue]ğŸ’¡ Try './binder preview intro' to test your setup[/blue]")

    def _check_environment(self):
        """Check current environment status"""
        console.print("[blue]ğŸ” Checking your environment...[/blue]")
        
        status_table = Table(show_header=True, header_style="bold blue", box=None)
        status_table.add_column("Tool", style="cyan", width=15)
        status_table.add_column("Status", style="white", width=15)
        status_table.add_column("Version", style="dim")
        
        # Check various tools
        tools_to_check = [
            ('Quarto', ['quarto', '--version']),
            ('Python', ['python3', '--version']),
            ('Git', ['git', '--version']),
            ('GitHub CLI', ['gh', '--version']),
            ('Ollama', ['ollama', '--version'])
        ]
        
        for tool_name, cmd in tools_to_check:
            try:
                result = subprocess.run(cmd, capture_output=True, text=True, check=True)
                version = result.stdout.strip().split('\n')[0]
                status_table.add_row(tool_name, "âœ… Available", version)
            except:
                status_table.add_row(tool_name, "âŒ Missing", "Not installed")
        
        console.print(status_table)

    def _install_tools(self):
        """Install missing tools"""
        console.print("[blue]ğŸ“¦ Installing missing tools...[/blue]")
        
        # Check what's missing and offer to install
        missing_tools = []
        
        tools_to_check = [
            ('Quarto', ['quarto', '--version'], "https://quarto.org/docs/get-started/"),
            ('Python', ['python3', '--version'], "https://www.python.org/downloads/"),
            ('Git', ['git', '--version'], "https://git-scm.com/downloads"),
            ('GitHub CLI', ['gh', '--version'], "https://cli.github.com/"),
            ('Ollama', ['ollama', '--version'], "https://ollama.ai/")
        ]
        
        for tool_name, cmd, url in tools_to_check:
            try:
                subprocess.run(cmd, capture_output=True, check=True)
            except:
                missing_tools.append((tool_name, url))
        
        if missing_tools:
            console.print("[yellow]âš ï¸ Missing tools detected:[/yellow]")
            for tool_name, url in missing_tools:
                console.print(f"  â€¢ {tool_name}: {url}")
            
            console.print("\n[blue]ğŸ’¡ Please install missing tools manually, then run './binder setup' again[/blue]")
        else:
            console.print("[green]âœ… All required tools are available[/green]")

    def _configure_git(self):
        """Configure Git settings"""
        console.print("[blue]ğŸ”§ Configuring Git...[/blue]")
        
        # Check if Git is configured
        try:
            result = subprocess.run(['git', 'config', 'user.name'], capture_output=True, text=True)
            if result.returncode != 0:
                console.print("[yellow]âš ï¸ Git user.name not configured[/yellow]")
                console.print("[blue]ğŸ’¡ Run: git config --global user.name 'Your Name'[/blue]")
            else:
                console.print(f"[green]âœ… Git user.name: {result.stdout.strip()}[/green]")
        except:
            console.print("[red]âŒ Git not available[/red]")
        
        try:
            result = subprocess.run(['git', 'config', 'user.email'], capture_output=True, text=True)
            if result.returncode != 0:
                console.print("[yellow]âš ï¸ Git user.email not configured[/yellow]")
                console.print("[blue]ğŸ’¡ Run: git config --global user.email 'your.email@example.com'[/blue]")
            else:
                console.print(f"[green]âœ… Git user.email: {result.stdout.strip()}[/green]")
        except:
            console.print("[red]âŒ Git not available[/red]")

    def _test_setup(self):
        """Test the setup by building a simple chapter"""
        console.print("[blue]ğŸ§ª Testing setup...[/blue]")
        
        # Try to build a simple chapter
        try:
            console.print("[blue]ğŸ“š Testing chapter build...[/blue]")
            success = self.build("intro", "html")
            if success:
                console.print("[green]âœ… Build test successful![/green]")
            else:
                console.print("[yellow]âš ï¸ Build test failed - check your Quarto installation[/yellow]")
        except Exception as e:
            console.print(f"[red]âŒ Test failed: {e}[/red]")

def main():
    binder = BookBinder()
    
    if len(sys.argv) < 2:
        binder.show_help()
        return
    
    command = sys.argv[1].lower()
    
    # Enhanced command mapping with aliases
    command_aliases = {
        'b': 'build',
        'p': 'preview',
        'pf': 'preview-full',
        'c': 'clean',
        'ch': 'check',
        's': 'switch',
        'st': 'status',
        'l': 'list',
        'he': 'hello',
        'se': 'setup',
        'h': 'help'
    }

    # Apply aliases
    if command in command_aliases:
        command = command_aliases[command]

    # Handle commands
    try:
        if command == "build":
            if len(sys.argv) < 4:
                console.print("[red]âŒ Usage: ./binder build <chapter[,chapter2,...]|all|-> <format>[/red]")
                console.print("[dim]Examples: ./binder build - html, ./binder build intro pdf[/dim]")
                return
            binder.show_symlink_status()
            chapters = sys.argv[2]
            format_type = sys.argv[3]
            if format_type not in ["html", "pdf"]:
                console.print("[red]âŒ Format must be 'html' or 'pdf'[/red]")
                return
            
            if chapters == "-" or chapters == "all":
                # Build all chapters
                binder.build_full(format_type)
            else:
                # Build specific chapters
                binder.build(chapters, format_type)

        elif command == "preview":
            if len(sys.argv) < 3:
                console.print("[red]âŒ Usage: ./binder preview <chapter>[/red]")
                return
            binder.show_symlink_status()
            chapter = sys.argv[2]
            binder.preview(chapter)

        elif command == "build-full":
            binder.show_symlink_status()
            format_type = sys.argv[2] if len(sys.argv) > 2 else "html"
            if format_type not in ["html", "pdf"]:
                console.print("[red]âŒ Format must be 'html' or 'pdf'[/red]")
                return
            binder.build_full(format_type)

        elif command == "preview-full":
            binder.show_symlink_status()
            format_type = sys.argv[2] if len(sys.argv) > 2 else "html"
            if format_type not in ["html", "pdf"]:
                console.print("[red]âŒ Format must be 'html' or 'pdf'[/red]")
                return
            binder.preview_full(format_type)

        elif command == "clean":
            binder.show_symlink_status()
            binder.clean()

        elif command == "check":
            success = binder.check_artifacts()
            if not success:
                sys.exit(1)

        elif command == "switch":
            if len(sys.argv) < 3:
                console.print("[red]âŒ Usage: ./binder switch <html|pdf>[/red]")
                return
            binder.show_symlink_status()
            format_type = sys.argv[2]
            binder.switch(format_type)

        elif command == "status":
            binder.show_status()

        elif command == "list":
            binder.show_chapters()

        elif command == "publish":
            binder.show_symlink_status()
            binder.publish()

        elif command == "about":
            binder.show_about()

        elif command == "help":
            binder.show_help()

        elif command == "hello":
            binder.show_hello()

        elif command == "setup":
            binder.setup_environment()

        else:
            console.print(f"[red]âŒ Unknown command: {command}[/red]")
            console.print("[yellow]ğŸ’¡ Use './binder help' to see available commands[/yellow]")
                
    except KeyboardInterrupt:
        console.print("\n[yellow]ğŸ‘‹ Goodbye![/yellow]")
    except Exception as e:
        console.print(f"[red]âŒ Error: {e}[/red]")

if __name__ == "__main__":
    main() 