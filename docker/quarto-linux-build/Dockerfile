# Set working directory
WORKDIR /workspace

# Verify installations (MINIMAL TEST - JUST QUARTO)
RUN quarto --version && \
    echo "‚úÖ Minimal test container - only Quarto installed"

# Health check (MINIMAL TEST VERSION)
RUN echo "‚úÖ Minimal test container build completed successfully" && \
    echo "üìä Quarto version: $(quarto --version)" && \
    echo "üß™ This is a minimal test to verify build/save/find process works" && \
    echo "üöÄ Ready to test container build workflow!"